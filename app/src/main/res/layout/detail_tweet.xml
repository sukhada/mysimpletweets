<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="#4099FF">
    </android.support.v7.widget.Toolbar>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">


        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/ivDetailProfileImage"
            android:layout_margin="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvDetailName"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivDetailProfileImage"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvDetailScreenname"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvDetailName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvDetailBody"
            android:autoLink="all"
            android:linksClickable="true"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tvDetailScreenname"
            android:gravity="top"
            android:layout_toEndOf="@+id/ivDetailProfileImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvDetailRelativeDate"
            android:layout_alignTop="@+id/ivDetailProfileImage"
            android:layout_alignParentEnd="true"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_detail_reply"
            android:src="@drawable/ic_reply"
            android:layout_below="@+id/tvDetailBody"
            android:layout_toEndOf="@id/ivDetailProfileImage"
            android:layout_marginTop="10dp"
            android:tint="#a8a8a8" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_retweet"
            android:id="@+id/iv_detail_retweet"
            android:layout_below="@+id/tvDetailBody"
            android:layout_toEndOf="@id/iv_detail_reply"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"
            android:tint="#a8a8a8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailRetweetCount"
            android:text="test"
            android:layout_below="@+id/tvDetailBody"
            android:layout_toEndOf="@id/iv_detail_retweet"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:paddingLeft="3dp"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_detail_favorite"
            android:src="@drawable/ic_heart"
            android:layout_below="@+id/tvDetailBody"
            android:layout_toRightOf="@id/iv_detail_retweet"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"
            android:tint="#a8a8a8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailFavoriteCount"
            android:text="test"
            android:layout_below="@+id/tvDetailBody"
            android:layout_toRightOf="@id/iv_detail_favorite"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:paddingLeft="3dp"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/ivDetailPreviewImage"
            android:layout_below="@+id/tvDetailBody"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>